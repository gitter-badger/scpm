				concat 'value="0">0</option>'
				# 1
				concat '<option '
				if (q.note.to_s == "1") 
					concat 'selected ' 
				end
				concat 'value="1">1</option>'
				# 2
				concat '<option '
				if (q.note.to_s == "2") 
					concat 'selected ' 
				end
				concat 'value="2">2</option>'
				# 3
				concat '<option '
				if (q.note.to_s == "3") 
					concat 'selected ' 
				end
				concat 'value="3">3</option>'
			concat '</select></td>'
			
			# Question Reference
			concat '<td class="question_reference_' + q.lifecycle_question.pm_type_axe.id.to_s + '" style="background-color: #8DC600;">'
			if(q.reference)
